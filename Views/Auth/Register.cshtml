@model RootsApp.Models.User
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone"
               type="tel"
               class="form-control"
               required
               pattern="\d{11}"
               title="Please enter a valid 11-digit phone number." />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="PasswordHash"
               type="password"
               class="form-control"
               required
               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
               title="Password must be at least 8 characters, contain at least one uppercase letter, one lowercase letter, and one number" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Register</button>
    <a href="/Auth/Login" class="btn btn-link">Back to Login</a>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</form>