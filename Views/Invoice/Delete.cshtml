@model RootsApp.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<h2 class="text-danger">Delete Invoice</h2>

<h4>Are you sure you want to delete this invoice?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Invoice ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.CreatedAt.Value.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
